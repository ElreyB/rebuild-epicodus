<% render("layouts/errors", :object => @lesson) %>

<%= form_for [@section, @lesson] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control"%>

  <%= f.label :number %>
  <%= f.number_field :number, class: "form-control" %>

  <%= f.label :text %>
  <%= f.text_area :text, class: "form-control"%>

  <%= f.submit %>
<% end %>
