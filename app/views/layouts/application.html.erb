<!DOCTYPE html>
<html>
  <head>
    <title>RebuildEpicodus</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar">
      <div class="container-fluid">
        <div class="navbar-header">
          <a href="#">Rebuild Epicodus</a>
        </div>
        <ul class="nav navbar-nav navbar-left">
          <%= yield(:nav_courses) %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= flash[:alert] %>
      <%= flash[:notice] %>
      <nav>
        <%= yield(:nav_lesson) %>
      </nav>
      <%= yield %>
    </div>
    <footer>
      <nav class="navbar">
        <div class="container-fluid">
          <div class="navbar-header">
            <a href="#" class="open-admin">Admin</a>
          </div>
          <ul class="nav navbar-nav navbar-left">
            <%= yield(:nav_footer) %>
          </ul>
        </div>
      </nav>
    </footer>
  </body>
</html>
